<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <!-- TITLE -->
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <!-- LISTING CARD -->
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image?.url || '/default-image.jpg' %>"
      class="card-img-top show-img"
      alt="listing_image"
    />

    <div class="card-body">
      <p class="card-text">
        Owned by <i><%= listing.owner?.username || "@Kashish" %></i>
      </p>

      <p><%= listing.description || "No description available." %></p>

      <p>
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
        "N/A" %>
      </p>

      <p><%= listing.location || "Location not specified" %></p>
      <p><%= listing.country || "Country not specified" %></p>
    </div>
  </div>

  <!-- EDIT / DELETE -->
  <% if (currUser && listing.owner && currUser._id.toString() ===
  listing.owner._id.toString()) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- REVIEW FORM -->
  <div class="col-8 offset-3">
    <% if (currUser) { %>
    <hr />
    <h4>Leave a Review</h4>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <% for (let i = 1; i <= 5; i++) { %>
          <input
            type="radio"
            id="rate-<%= i %>"
            name="review[rating]"
            value="<%= i %>"
            required
          />
          <label
            for="rate-<%= i %>"
            title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i-1] %>"
          ></label>
          <% } %>
        </fieldset>
      </div>

      <div class="mb-3">
        <label class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a comment</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>

    <hr />

    <!-- ALL REVIEWS -->
    <% if (listing.reviews && listing.reviews.length > 0) { %>
    <div class="row">
      <p><b>All Reviews</b></p>

      <% listing.reviews.forEach(review => { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5>@<%= review.author?.username || "Anonymous" %></h5>

          <div
            class="starability-result"
            data-rating="<%= Number(review.rating) %>"
          ></div>

          <p><%= review.comment %></p>

          <% if (currUser && review.author && currUser._id.toString() ===
          review.author._id.toString()) { %>
          <form
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>

  <!-- MAP -->
  <div class="col-6 offset-3">
    <h3>Where you'll be</h3>
    <div id="map" style="width: 100%; height: 400px; margin-bottom: 2rem"></div>
  </div>
</div>

<!-- MAPBOX -->
<link
  href="https://api.mapbox.com/mapbox-gl-js/v2.20.0/mapbox-gl.css"
  rel="stylesheet"
/>
<script src="https://api.mapbox.com/mapbox-gl-js/v2.20.0/mapbox-gl.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const MAP_TOKEN = "<%= MAP_TOKEN %>";
    const listingData = <%- JSON.stringify(listing) %>;

    const defaultCoords = [77.209, 28.6139]; // Delhi fallback
    const coords = listingData.geometry?.coordinates || defaultCoords;

    mapboxgl.accessToken = MAP_TOKEN;

    const map = new mapboxgl.Map({
      container: "map",
      style: "mapbox://styles/mapbox/streets-v11",
      center: coords,
      zoom: 10,
    });

    map.addControl(new mapboxgl.NavigationControl());

    new mapboxgl.Marker()
      .setLngLat(coords)
      .setPopup(
        new mapboxgl.Popup({ offset: 25 }).setHTML(
          `<h6>${listingData.title}</h6><p>${listingData.location || ""}</p>`
        )
      )
      .addTo(map);
  });
</script>
