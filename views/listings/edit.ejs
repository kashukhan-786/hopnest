<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Edit Your Listing</h3>

    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          value="<%= listing.title %>"
          name="listing[title]"
          id="title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          rows="3"
          class="form-control"
          required
        ><%= listing.description %></textarea>
        <div class="invalid-feedback">Enter a description.</div>
      </div>

      <!-- Existing Image -->
      <div class="mb-3">
        <h5>Current Image</h5>
        <img
          src="<%= listing.image?.url %>"
          class="img-fluid mb-2"
          style="max-width: 250px; border-radius: 6px"
        />
      </div>

      <!-- Upload new Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload new image</label>
        <input name="listing[image]" id="image" type="file" class="form-control" />
      </div>

      <!-- Price + Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            value="<%= listing.price %>"
            name="listing[price]"
            id="price"
            type="number"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            value="<%= listing.country %>"
            name="listing[country]"
            id="country"
            type="text"
            class="form-control"
            required
          />
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          value="<%= listing.location %>"
          name="listing[location]"
          id="location"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select
          name="listing[category]"
          id="category"
          class="form-select"
          required
        >
          <option value="">Select a category</option>
          <option value="trending" <%= listing.category === "trending" ? "selected" : "" %>>Trending</option>
          <option value="rooms" <%= listing.category === "rooms" ? "selected" : "" %>>Rooms</option>
          <option value="iconic cities" <%= listing.category === "iconic cities" ? "selected" : "" %>>Iconic Cities</option>
          <option value="mountains" <%= listing.category === "mountains" ? "selected" : "" %>>Mountains</option>
          <option value="castles" <%= listing.category === "castles" ? "selected" : "" %>>Castles</option>
          <option value="arctic" <%= listing.category === "arctic" ? "selected" : "" %>>Arctic</option>
          <option value="amazing pools" <%= listing.category === "amazing pools" ? "selected" : "" %>>Amazing Pools</option>
          <option value="camping" <%= listing.category === "camping" ? "selected" : "" %>>Camping</option>
          <option value="beach" <%= listing.category === "beach" ? "selected" : "" %>>Beach</option>
        </select>
      </div>

      <!-- Submit -->
      <button class="btn btn-dark add-btn mt-3">Save Changes</button>
    </form>
  </div>
</div>
