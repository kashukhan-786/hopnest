<% layout("layouts/boilerplate") %>

<style>
  /* Desktop layout */
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    margin-top: 1.5rem;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0.7;
    transition: 0.2s;
    cursor: pointer;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter i {
    font-size: 2rem;
  }
  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 2rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }

  /* 1000 → 700 */
  @media (max-width: 1000px) and (min-width: 700px) {
    #filters {
      gap: 1.2rem !important;
      padding-left: 0.5rem !important;
    }
    .filter i {
      font-size: 1.3rem !important;
    }
    .filter p {
      font-size: 0.65rem !important;
    }
    .filter {
      transform: scale(0.9);
    }
  }

  /* 700 → 500 */
  @media (max-width: 700px) and (min-width: 500px) {
    #filters {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      gap: 0.6rem;
      padding: 0.5rem;
      scrollbar-width: none;
    }
    #filters::-webkit-scrollbar {
      display: none;
    }

    .filter {
      transform: scale(0.75);
      opacity: 0.9;
    }
    .filter i {
      font-size: 1rem !important;
    }
    .filter p {
      font-size: 0.55rem !important;
      margin-top: 0.15rem;
    }

    .tax-toggle {
      display: flex;
      align-items: center;
      padding: 0.4rem 0.8rem;
      border: 1px solid #ccc;
      border-radius: 1.2rem;
      height: auto;
      transform: scale(0.75);
      margin-left: 0.5rem !important;
      white-space: nowrap;
    }
    .tax-toggle label {
      font-size: 0.6rem !important;
      margin-left: 0.3rem;
    }
  }
</style>

<!-- ⭐ FIXED: Added OPENING #filters div -->
<div id="filters">
  <div class="filter" onclick="applyFilter('trending')">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>

  <div class="filter" onclick="applyFilter('rooms')">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>

  <div class="filter" onclick="applyFilter('iconic cities')">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </div>

  <div class="filter" onclick="applyFilter('mountains')">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>

  <div class="filter" onclick="applyFilter('castles')">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </div>

  <div class="filter" onclick="applyFilter('arctic')">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </div>

  <div class="filter" onclick="applyFilter('amazing pools')">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing Pools</p>
  </div>

  <div class="filter" onclick="applyFilter('camping')">
    <i class="fa-solid fa-tents"></i>
    <p>Camping</p>
  </div>

  <div class="filter" onclick="applyFilter('beach')">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>
<!-- ⭐ FIXED: Proper closing -->

<!-- Listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a
    href="/listings/<%= listing._id %>"
    class="listing-link"
    style="text-decoration: none; color: inherit"
  >
    <div class="card listing-card h-100">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_img"
        style="height: 20rem; object-fit: cover"
      />
      <div class="card-body">
        <p class="card-text">
          <strong><%= listing.title %></strong><br />
          ₹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A"
          %>/night
          <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<script>
  function applyFilter(category) {
    const searchInput = document.querySelector(".search-inp");
    const search = searchInput ? searchInput.value.trim() : "";

    // Build URL
    let newUrl = `/listings?category=${encodeURIComponent(category)}`;
    if (search) {
      newUrl += `&location=${encodeURIComponent(search)}`;
    }

    window.location.href = newUrl;
  }

  // TAX TOGGLE FUNCTION
  let taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("change", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });

  // SET INITIAL VALUE OF TAX DISPLAY ON LOAD
  document.addEventListener("DOMContentLoaded", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });

  // PRESS ENTER SEARCH EVENT
  const searchInput = document.querySelector(".search-inp");
  searchInput.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      window.location.href = `/listings?location=${encodeURIComponent(
        searchInput.value.trim()
      )}`;
    }
  });
</script>
